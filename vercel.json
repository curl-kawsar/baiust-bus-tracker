{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "functions": {
    "apps/api/index.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "PORT": "3001",
    "BASE_URL": "http://172.104.160.132:3000",
    "AUTH_TOKEN": "BCC2025"
  }
}
